@model LoginModel

@{
    ViewBag.Title = "test";
}

@using (Html.BeginForm("SubmitLogin", "Login"))
    {
        <div class="form-group">
            <label class="control-label" for="@Html.IdFor(x => x.Username)">Email</label>
            @Html.TextBoxFor(x => x.Username, new {@class = "form-control", type = "username"})
            <div class="help-block">
                @Html.ValidationMessageFor(x => x.Username)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label" for="@Html.IdFor(x => x.Password)">Password</label>
            @Html.PasswordFor(x => x.Password, new {@class = "form-control"})
            <div class="help-block">
                @Html.ValidationMessageFor(x => x.Password)
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    }
